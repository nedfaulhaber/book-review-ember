{{#if addNewBook}}
  <h2>Add a New Book For Review</h2>
  <div>
      <form>
        <div class="form-group">
          <label for="title">Book Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="firstname">Author First Name</label>
          {{input value=firstname id="firstname"}}
        </div>

        <div class="form-group">
          <label for="lastname">Author Last Name</label>
          {{input value=lastname id="lastname"}}
        </div>

        <div class="form-group">
          <label for="year">Year Originally Published</label>
          {{input value=year id="year"}}
        </div>

        <button {{action 'saveNewBook1'}}>Save</button>
      </form>
  </div>
{{else}}
    <button {{action 'bookFormShow'}}>Add Book</button>
{{/if}}
