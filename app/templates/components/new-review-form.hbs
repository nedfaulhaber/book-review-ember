{{#if addNewReview}}
  <div>
      <form>
        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating id="rating"}}
        </div>

        <div class="form-group">
          <label for="comments">Comments</label>
          {{input value=comments id="comments"}}
        </div>

        <div class="form-group">
          <label for="username">Username</label>
          {{input value=username id="username"}}
        </div>

        <button {{action 'saveNewReview1'}}>Save</button>
      </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}}>Add a Review</button>
{{/if}}
